<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.afbb.balakrishna.albumart.activities.OnlineMusicActivity">

    <TextView
        android:id="@+id/tv_channel_name"
        android:text="channel name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="101dp" />

    <TextView
        android:id="@+id/tv_url"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Url"
        android:layout_below="@+id/tv_channel_name"
        android:layout_marginTop="20dp"
        android:singleLine="true"
        android:layout_centerHorizontal="true"></TextView>

    <SeekBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/seekBar_download_progress"
        android:layout_above="@+id/llout"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"></SeekBar>

    <LinearLayout
        android:id="@+id/llout"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content"
        android:layout_marginBottom="43dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="43dp"
        android:layout_marginEnd="43dp">

        <ImageView
            android:id="@+id/start_music"
            android:layout_width="30dp"
            android:layout_weight="1"
            android:onClick="startMusic"
            android:layout_height="30dp"
            android:src="@drawable/start" />

        <ImageView
            android:id="@+id/stopt_music"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:onClick="stopMusic"
            android:src="@drawable/stop" />

        <ImageView
            android:id="@+id/btn_download"
            android:onClick="downloadSong"
            android:src="@drawable/download"
            android:layout_width="30dp"
            android:layout_weight="1"
            android:layout_height="30dp" />
    </LinearLayout>


</RelativeLayout>
